
(begin
	(setglobal "next-body-walk-dir" 1)
	(start (infloop (lambda () (begin
		(setv "body_walk_dir" 0)
		(sleep 5000)
		(let (dir (getglobal "next-body-walk-dir")) (begin
			(setv "body_walk_dir" dir)
			(setglobal "next-body-walk-dir" (if (eq dir 1) 2 1))))
		(sleep 1000)
		))))
	(start (infloop (lambda () (begin
		(setv "face_red" 1)
		(sleep 2000)
		(setv "face_red" 0)
		(sleep 2000)))))
	(start (infloop (lambda () (begin
		(setv "body_shake_speed" 2)
		(sleep 2000)
		(setv "body_shake_speed" 0)
		(sleep 2000)))))
	(start (infloop (lambda ()
		(loop (lambda (n) (begin
			(if (eq n 4) (speak "보노보노") 0)
			(setv "face_sweat_len" n)
			(sleep 1000)))
			4))))
	(start (infloop (lambda () (begin
		(let (res (suspend wait_event "speed"))
			(if (eq res "fast")
				(setv "body_arm_speed" 2)
				(setv "body_arm_speed" 0))
		)))))
)


